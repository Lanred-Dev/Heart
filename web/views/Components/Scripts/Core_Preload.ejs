<script type="text/javascript">
    const Latest_Announcement = document.getElementById("Latest_Announcement");
    const Navbar = document.getElementById("Navbar");
    const Latest_Announcement_Content = document.getElementById("Latest_Announcement_Content");
    const Latest_Announcement_Close_Button = document.getElementById("Latest_Announcement_Close_Button");

    function Get_Cookie(Cookie_Name) {
        const Name = `${Cookie_Name}=`;
        const Cookies = decodeURIComponent(document.cookie).split(";");

        for (let Cookie_Index = 0; Cookie_Index < Cookies.length; Cookie_Index++) {
            let Cookie = Cookies[Cookie_Index];

            while (Cookie.charAt(0) == " ") {
                Cookie = Cookie.substring(1);
            }

            if (Cookie.indexOf(Name) == 0) {
                return Cookie.substring(Name.length, Cookie.length);
            }
        }

        return null;
    }
</script>